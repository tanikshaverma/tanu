
#include <iostream>  
using namespace std;

class MyClass {        
  public:              
    void myMethod() 
	{  
      
int rows;

    cout << "Enter number of rows: ";
    cin >> rows;

    for(int i = 1; i <= rows; ++i)
    {
        for(int j = 1; j <= i; ++j)
        {
            cout << "* ";
        }
        cout << "\n";
    }     
    }
};
  
int main() {
  MyClass myObj;    
  myObj.myMethod(); 
  return 0;
}    
      
